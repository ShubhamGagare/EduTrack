{
  "name": "SchoolManagementSystem",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "vercel-build": "prisma generate --schema=packages/db/prisma/schema.prisma && prisma migrate deploy && next build",
    "prisma:generate": "prisma generate --schema=packages/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bcryptjs": "^2.4.6",
    "autoprefixer": "^10.4.19",
    "bcryptjs": "^2.4.3",
    "postcss": "^8.4.39",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.4",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@material-tailwind/react": "^2.1.9",
    "axios": "^1.7.2",
    "faker": "^6.6.6",
    "lucide-react": "^0.400.0",
    "next-auth": "^4.24.7",
    "recoil": "^0.7.7"
  }
}
